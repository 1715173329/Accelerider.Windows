<UserControl x:Class="Accelerider.Windows.Modules.NetDisk.Views.NetDiskAuthentications.SelectNetDiskTypeDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:system="clr-namespace:System;assembly=mscorlib"
             xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
             xmlns:mvvm="http://prismlibrary.com/"
             mvvm:ViewModelLocator.AutoWireViewModel="True"
             Style="{StaticResource UserControlStyle.Dialog}"
             Width="400">
     
    <Grid Margin="0 0 0 10">
        <ListBox x:Name="NetDiskTypeListBox" ItemsSource="{Binding NetDiskTypes}" SelectionMode="Single"
                 ItemContainerStyle="{StaticResource ListBoxItemStyle.LeftBarAndUnderline}" >
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Border Cursor="Hand" Background="#01FFFFFF">
                        <Border.InputBindings>
                            <MouseBinding MouseAction="LeftClick" 
                                          Command="{Binding OpenCommand}" />
                        </Border.InputBindings>
                        <StackPanel Orientation="Horizontal">
                            <Image Source="{Binding Logo}" Width="60" Height="60" Margin="20 10"/>
                            <StackPanel Margin="20 10">
                                <TextBlock Text="{Binding Name}" FontSize="14"/>
                                <TextBlock Text="{Binding Description}" Foreground="Gray" TextWrapping="Wrap" Margin="0 10 0 0"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>

</UserControl>
